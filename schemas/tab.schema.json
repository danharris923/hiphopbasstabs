{
  "$defs": {
    "BarMarker": {
      "description": "Timestamp marker for individual bars in bass tabs.",
      "examples": [
        {
          "bar": 1,
          "start_sec": 0.0
        }
      ],
      "properties": {
        "bar": {
          "description": "Bar number (1-indexed)",
          "minimum": 1,
          "title": "Bar",
          "type": "integer"
        },
        "start_sec": {
          "description": "Start time in seconds for this bar",
          "minimum": 0,
          "title": "Start Sec",
          "type": "number"
        }
      },
      "required": [
        "bar",
        "start_sec"
      ],
      "title": "BarMarker",
      "type": "object"
    }
  },
  "description": "ASCII bass tab with timing information and metadata.",
  "examples": [
    {
      "bars": [
        {
          "bar": 1,
          "start_sec": 0.0
        },
        {
          "bar": 2,
          "start_sec": 4.1
        }
      ],
      "difficulty": 2,
      "tab_text": "G|----------------|----------------|\nD|----------------|----------------|\nA|--5-5--3-3--1-1-|--0----1--3-----|\nE|----------------|----------------|",
      "tuning": "EADG"
    }
  ],
  "properties": {
    "tuning": {
      "default": "EADG",
      "description": "Bass tuning (standard 4-string EADG, 5-string BEADG, or alternate tunings)",
      "enum": [
        "EADG",
        "BEADG",
        "DADG",
        "CGCF"
      ],
      "title": "Tuning",
      "type": "string"
    },
    "difficulty": {
      "description": "Difficulty level from 1 (beginner) to 5 (expert)",
      "maximum": 5,
      "minimum": 1,
      "title": "Difficulty",
      "type": "integer"
    },
    "tab_text": {
      "description": "ASCII tab notation with line breaks",
      "minLength": 10,
      "title": "Tab Text",
      "type": "string"
    },
    "bars": {
      "description": "List of bar timing markers",
      "items": {
        "$ref": "#/$defs/BarMarker"
      },
      "minItems": 1,
      "title": "Bars",
      "type": "array"
    }
  },
  "required": [
    "difficulty",
    "tab_text",
    "bars"
  ],
  "title": "Tab",
  "type": "object",
  "$id": "https://basstabs.com/schemas/tab"
}